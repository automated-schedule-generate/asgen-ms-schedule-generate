{
  "tasks": {
    "start": "deno run --sloppy-imports -A --env-file=.env src/main.ts",
    "check": "deno check --sloppy-imports src/main.ts",
    "start:dev": "deno run --check --sloppy-imports -A --env-file=.env --watch src/main.ts",
    "start:prod": "deno run --sloppy-imports -A dist/main.js",
    "build": "deno run --sloppy-imports -A npm:@nestjs/cli build"
  },
  "nodeModulesDir": "auto",
  "imports": {
    "src/": "./src/"
  }
}
